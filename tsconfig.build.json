{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"dist-esm",
		"tests",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
